/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",                 // ‚úÖ Angular 16+ supports ES2022
    "module": "es2020",                 // ‚úÖ OK with Angular build system
    "lib": ["es2018", "dom"],           // ‚úÖ Can upgrade to es2020 if needed
    "paths": {
      "@proxy": ["src/app/proxy/index.ts"],
      "@proxy/*": ["src/app/proxy/*"]
    },
    "useDefineForClassFields": false    // ‚úÖ Still compatible with Angular 18
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,     // üëç Recommended
    "strictInputAccessModifiers": true,    // üëç Recommended
    "strictTemplates": true                // üëç Optional but improves type safety
  }
}
